{
  "name": "@bizhermit/minifier",
  "version": "1.0.1",
  "description": "minifier",
  "repository": {
    "type": "git",
    "url": "https://github.com/bizhermit/minifier.git"
  },
  "bugs": {
    "url": "https://github.com/bizhermit/minifier/issues",
    "email": "support@bizhermit.com"
  },
  "author": "Ryoichi Senda <rsenda@bizhermit.com> (https://bizhermit.com)",
  "homepage": "https://bizhermit.com",
  "license": "MIT",
  "main": "bin/cli.js",
  "bin": "bin/cli.js",
  "files": [
    "bin"
  ],
  "scripts": {
    "dev": "npx tsc -w -p src",
    "try": "node bin/cli.js ./test",
    "build": "npx rimraf bin && npx tsc -p src && node . ./bin && npx license-checker --production > AUTHORS",
    "pack": "npx rimraf build && npm run build && npx pkg --out-path build --compress GZip bin/cli.js",
    "postpublish": "git tag && git push origin tags/v%npm_package_version%"
  },
  "devDependencies": {
    "@types/csso": "^5.0.0",
    "@types/html-minifier": "^4.0.1",
    "@types/node": "^17.0.0",
    "license-checker": "^25.0.1",
    "pkg": "^5.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "csso": "^5.0.1",
    "html-minifier": "^4.0.0",
    "terser": "^5.10.0"
  },
  "keywords": [
    "bizhermit",
    "minify",
    "js",
    "css",
    "html"
  ]
}
